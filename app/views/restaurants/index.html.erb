<div class="banner-restaurant-index">
  <h1>Pick a meal</h1>
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <% @carousel_restaurants.each do |restaurant| %>
        <% next if restaurant.meals.empty? %>
        <%= render "carousel-item", restaurant: restaurant, active: restaurant == @carousel_restaurants.first %>
      <% end  %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>


<div class="container index">
  <h1>...or a restaurants</h1>
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <% @restaurants.each do |restaurant| %>
        <%= render "carousel-restaurant", restaurant: restaurant, active: restaurant == @carousel_restaurants.first %>
      <% end  %>
  </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon restaurant" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon restaurant" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
    </a>
  </div>

  </div>
  <div class="bottom-banner">
    <h3>You're a restaurant owner ?</h3>
    <%= link_to "Add my restaurant", new_restaurant_path %>
  </div></div>
