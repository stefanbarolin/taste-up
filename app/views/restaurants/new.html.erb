

<div class="container">
  <h1>Create a new restaurant</h1>
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :picture_url %>
    <%= f.input :category, :collection => %w(Francais Japonais Libanais Burger Italien) %>
    <%= f.submit "Submit restaurant", class: "btn btn-primary" %>
  <% end %>
  <%= link_to "back to restaurants", restaurants_path %>
</div>
