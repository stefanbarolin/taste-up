<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1499028344343-cd173ffc68a9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80);">
  <div class="container">
    <h1>Pick a meal ...</h1>
    <ul>
      <% @meals.each do |meal| %>
      <li>
        <p><%= meal.name %><p>
      </li>
      <% end %>
    </ul>
    <h1>or pick a Restaurant</h1>
    <ul>
      <% @restaurants.each do |restaurant| %>
      <li>
        <p><%= restaurant.name %><p>
      </li>
      <% end %>
    </ul>
  </div>
</div>
<%= render 'shared/footer' %>
