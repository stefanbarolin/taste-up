<div class="container">
  <h1 class="mt-3 mb-4" style="color: #EC7458"><%= @meal.name.upcase %> </h1>
</div>
    <div class="container">
  <div class="row">
    <div class="col-lg">
      <div class="card" style="width: 20rem;">
        <img <%= @meal.picture_url %> class="card-img-top" alt="Meal img" style="height: 400px;">
          <div class="card-body">
           <p class="card-text mb-1"> Meal name : <%= @meal.name %></p>
            <p class="card-text">Price : <%= @meal.price %>$ </p><center><a data-toggle="modal" data-target="#exampleModal" class="btn btn-outline-primary rounded-pill mb-3 mt-5 " style="background-color: #EC7458; border-color: #EC7458; color: #fff;" <%= link_to "Create an Order", new_meal_order_path(meal_id: @meal) %></center></a>
            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Confirm your order</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    You are about to order : <%= @meal.name %>. Do you want to reserve your menu?
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success" style="border: none; color: #fff!important;"><%= link_to "Yes", new_meal_order_path(meal_id: @meal) %></button>
                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
    </div>
    <div class="col-lg">
      <div class="card" style="width: 20rem; background-color: #E3E3E3;">
        <h2 class="mt-3 mr-3 ml-3 mb-4 pb-1" style="font-size: 25px; font-weight: bold; color: #EC7458;"><center style="border-bottom: solid 2px #EC7458"> In this meal you have </center></h2>
          <div class="card-body">
            <ul class="list-group mb-4">
              <li class="list-group-item"><%= @meal.name %></li>
              <li class="list-group-item"><%= @meal.description %></li>
            </ul>
          </div>
          <button type="button" class="btn btn-lg btn-warning" data-toggle="popover" title="Allergen" data-content="Food for vegetarians and vetals">Allergen information</button>
      </div>
    </div>
      <div class="col-lg">
        <div class="col-lg">
      <div class="card" style="width: 20rem; background-color: #E3E3E3;">
        <h2 class="mt-3 mr-3 ml-3 mb-5 pb-1" style="font-size: 25px; font-weight: bold; color: #EC7458;"><center style="border-bottom: solid 2px #EC7458"> All reviews </center></h2>
          <div class="card-body mb-3">
            <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://zupimages.net/up/20/42/csqg.png" class="d-block w-100" alt="...">
                </div>
                  <div class="carousel-item">
                    <img src="https://www.zupimages.net/up/20/42/mwe7.png" class="d-block w-100" alt="...">
                  </div>
              </div>
  </div>

          </div>
      </div>
    </div>
  </div>
  <br>
</div>

