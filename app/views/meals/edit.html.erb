<div class= "container col-lg-">
<center class='mt-5'><h1><%= @meal.restaurant.name %></h1></center>
  <h3>Edit meal</h3>
  <%= simple_form_for @meal do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Edit this meal", class: "btn btn-primary" %>
<% end %>
<%= link_to "Back to #{@meal.restaurant.name}", restaurant_path(@meal.restaurant) %>
</div>
